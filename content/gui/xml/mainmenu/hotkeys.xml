<?xml version="1.0"?>

<AutoResizeContainer name="hotkeys_window">
<!-- Hotkeys section -->
<HBox name="hotkeys" padding="0">
	<ScrollArea name="hotkeys_list" fixed_size="600,450">
		<HBox name="label_button_columns" padding="0">
			<VBox name="keys_container">
				<Label name="labels_headline" text="Actions" />
				<Label name="lbl_LEFT" text="LEFT" comment="noi18n_text" helptext="Scroll left" />
				<Label name="lbl_RIGHT" text="RIGHT" comment="noi18n_text" helptext="Scroll right" />
				<Label name="lbl_UP" text="UP" comment="noi18n_text" helptext="Scroll up" />
				<Label name="lbl_DOWN" text="DOWN" comment="noi18n_text" helptext="Scroll down" />
				<Label name="lbl_ROTATE_RIGHT" text="ROTATE_RIGHT" comment="noi18n_text" helptext="Rotate building or map clockwise" />
				<Label name="lbl_ROTATE_LEFT" text="ROTATE_LEFT" comment="noi18n_text" helptext="Rotate building or map counterclockwise" />
				<Label name="lbl_SPEED_UP" text="SPEED_UP" comment="noi18n_text" helptext="Increase game speed" />
				<Label name="lbl_SPEED_DOWN" text="SPEED_DOWN" comment="noi18n_text" helptext="Decrease game speed" />
				<Label name="lbl_PAUSE" text="PAUSE" comment="noi18n_text" helptext="Pause game" />
				<Label name="lbl_ZOOM_IN" text="ZOOM_IN" comment="noi18n_text" helptext="Zoom in" />
				<Label name="lbl_ZOOM_OUT" text="ZOOM_OUT" comment="noi18n_text" helptext="Zoom out" />
				<Label name="lbl_BUILD_TOOL" text="BUILD_TOOL" comment="noi18n_text" helptext="Show build menu" />
				<Label name="lbl_DESTROY_TOOL" text="DESTROY_TOOL" comment="noi18n_text" helptext="Enable destruct mode" />
				<Label name="lbl_ROAD_TOOL" text="ROAD_TOOL" comment="noi18n_text" helptext="Enable road building mode" />
				<Label name="lbl_PIPETTE" text="PIPETTE" comment="noi18n_text" helptext="Enable pipette mode (clone buildings)" />
				<Label name="lbl_PLAYERS_OVERVIEW" text="PLAYERS_OVERVIEW" comment="noi18n_text" helptext="Show player scores" />
				<Label name="lbl_SETTLEMENTS_OVERVIEW" text="SETTLEMENTS_OVERVIEW" comment="noi18n_text" helptext="Show settlement list" />
				<Label name="lbl_SHIPS_OVERVIEW" text="SHIPS_OVERVIEW" comment="noi18n_text" helptext="Show ship list" />
				<Label name="lbl_LOGBOOK" text="LOGBOOK" comment="noi18n_text" helptext="Toggle Captain's log" />
				<Label name="lbl_CHAT" text="CHAT" comment="noi18n_text" helptext="Chat" />
				<Label name="lbl_QUICKSAVE" text="QUICKSAVE" comment="noi18n_text" helptext="Quicksave" />
				<Label name="lbl_QUICKLOAD" text="QUICKLOAD" comment="noi18n_text" helptext="Quickload" />
				<Label name="lbl_TRANSLUCENCY" text="TRANSLUCENCY" comment="noi18n_text" helptext="Toggle translucency of ambient buildings" />
				<Label name="lbl_TILE_OWNER_HIGHLIGHT" text="TILE_OWNER_HIGHLIGHT" comment="noi18n_text" helptext="Highlight tile ownership" />
				<Label name="lbl_HEALTH_BAR" text="HEALTH_BAR" comment="noi18n_text" helptext="Toggle health bars" />
				<Label name="lbl_SHOW_SELECTED" text="SHOW_SELECTED" comment="noi18n_text" helptext="Focus camera on selection" />
				<Label name="lbl_REMOVE_SELECTED" text="REMOVE_SELECTED" comment="noi18n_text" helptext="Remove selected units / buildings" />
				<Label name="lbl_HELP" text="HELP" comment="noi18n_text" helptext="Display help" />
				<Label name="lbl_SCREENSHOT" text="SCREENSHOT" comment="noi18n_text" helptext="Screenshot" />
				<Label name="lbl_CONSOLE" text="SHOW_FPS" comment="noi18n_text" helptext="Toggle showing FPS on/off" />
				<Label name="lbl_GRID" text="GRID" comment="noi18n_text" helptext="Toggle grid on/off" />
				<Label name="lbl_COORD_TOOLTIP" text="COORD_TOOLTIP" comment="noi18n_text" helptext="Show coordinate values (Debug)" />
			</VBox>

			<VBox name="button_container" position="150, 0">
				<Label text="Primary" name="primary_buttons_headline" comment="First hotkey assigned to this action" />
			</VBox>

			<VBox name="sec_button_container" position="350, 0">
				<Label text="Secondary" name="secondary_buttons_headline" comment="Second hotkey assigned to this action" />
			</VBox>
	      </HBox>
	</ScrollArea>
</HBox>

<OkButton position="1640,500" helptext="Exit to main menu" />
<Button name="reset_to_default" text="Reset to default keys" position="1540,450" helptext="Reset to default" />
<!--
-->
</AutoResizeContainer>
