<?xml version="1.0"?>

<AutoResizeContainer name="hotkeys_window">
<!-- Hotkeys section -->
<HBox name="hotkeys" padding="10">
	<!-- Left pane
	<VBox name="graphics_left" max_size="320,500" min_size="320,0" padding="25">
	</VBox> -->

	<!-- Right pane
	<VBox name="graphics_right" max_size="320,500" min_size="320,0" padding="25">
	</VBox> -->


	<ScrollArea name="hotkeys_list" max_size="600,450" min_size="600,450">
		<HBox name="label_button_columns" padding="30">
			<VBox name="keys_container">
				<Label text="Actions" name="labels_headline" />
				<Label name="lbl_GRID" text="GRID" helptext="Toggle grid on/off" />
				<Label name="lbl_COORD_TOOLTIP" text="COORD_TOOLTIP" helptext="Show coordinate values (Debug)" />
				<Label name="lbl_DESTROY_TOOL" text="DESTROY_TOOL" helptext="Enable destruct mode" />
				<Label name="lbl_PLAYERS_OVERVIEW" text="PLAYERS_OVERVIEW" helptext="Show player scores" />
				<Label name="lbl_ROAD_TOOL" text="ROAD_TOOL" helptext="Enable road building mode" />
				<Label name="lbl_SPEED_UP" text="SPEED_UP" helptext="Increase game speed" />
				<Label name="lbl_SPEED_DOWN" text="SPEED_DOWN" helptext="Decrease game speed" />
				<Label name="lbl_PAUSE" text="PAUSE" helptext="Pause game" />
				<Label name="lbl_SETTLEMENTS_OVERVIEW" text="SETTLEMENTS_OVERVIEW" helptext="Show settlement list" />
				<Label name="lbl_SHIPS_OVERVIEW" text="SHIPS_OVERVIEW" helptext="Show ship list" />
				<Label name="lbl_LOGBOOK" text="LOGBOOK" helptext="Toggle Captain's log" />
				<Label name="lbl_BUILD_TOOL" text="BUILD_TOOL" helptext="Show build menu" />
				<Label name="lbl_ROTATE_RIGHT" text="ROTATE_RIGHT" helptext="Rotate building or map clockwise" />
				<Label name="lbl_ROTATE_LEFT" text="ROTATE_LEFT" helptext="Rotate building or map counterclockwise" />
				<Label name="lbl_CHAT" text="CHAT" helptext="Chat" />
				<Label name="lbl_TRANSLUCENCY" text="TRANSLUCENCY" helptext="Toggle translucency of ambient buildings" />
				<Label name="lbl_TILE_OWNER_HIGHLIGHT" text="TILE_OWNER_HIGHLIGHT" helptext="Highlight tile ownership" />
				<Label name="lbl_QUICKSAVE" text="QUICKSAVE" helptext="Quicksave" />
				<Label name="lbl_QUICKLOAD" text="QUICKLOAD" helptext="Quickload" />
				<Label name="lbl_PIPETTE" text="PIPETTE" helptext="Enable pipette mode (clone buildings)" />
				<Label name="lbl_HEALTH_BAR" text="HEALTH_BAR" helptext="Toggle health bars" />
				<Label name="lbl_LEFT" text="LEFT" helptext="Scroll left" />
				<Label name="lbl_RIGHT" text="RIGHT" helptext="Scroll right" />
				<Label name="lbl_UP" text="UP" helptext="Scroll up" />
				<Label name="lbl_DOWN" text="DOWN" helptext="Scroll down" />
				<Label name="lbl_CONSOLE" text="CONSOLE" helptext="Toggle console on/off" />
				<Label name="lbl_HELP" text="HELP" helptext="Display help" />
				<Label name="lbl_SCREENSHOT" text="SCREENSHOT" helptext="Screenshot" />
				<Label name="lbl_SHOW_SELECTED" text="SHOW_SELECTED" helptext="Focus camera on selection" />
				<Label name="lbl_REMOVE_SELECTED" text="REMOVE_SELECTED" helptext="Remove selected units / buildings" />
			</VBox>

			<VBox name="button_container" position="150, 0">
				<Label text="Primary" name="primary_buttons_headline" />
			</VBox>

			<VBox name="sec_button_container" position="350, 0">
				<Label text="Secondary" name="secondary_buttons_headline" />
			</VBox>
	      </HBox>
	</ScrollArea>
</HBox>

<OkButton position="1640,500" helptext="Exit to main menu" />
<Button name="reset_to_default" text="Reset to default keys" position="1540,450" helptext="Reset to default" />
<!--
-->
</AutoResizeContainer>
