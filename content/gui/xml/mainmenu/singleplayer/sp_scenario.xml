<?xml version="1.0"?>
<VBox max_size="320,480"  min_size="320,480"  name="right_side">
	<HBox name="label_hbox">
	
	<Label text="Choose a map to play:"  name="choose_map_lbl"/>
	<Label text="Select a language:"  name="select_lang_lbl"/>
	</HBox>
	<HBox name="scrollarea_hbox">
	<ScrollArea max_size="170,200"  min_size="140,200"  horizontal_scrollbar="0"  name="map_list_area">
		<ListBox name="maplist" />
	</ScrollArea>
	<ScrollArea max_size="110,200"  min_size="140,200"  horizontal_scrollbar="0"  name="lang_list_area">
		<ListBox name="langlist" />
	</ScrollArea>
	</HBox>

	<VBox name="map_info">
		<Label name="map_author"     wrap_text="1" max_size="300,40" />
		<Label name="map_difficulty" wrap_text="1" max_size="300,20" />
		<Label name="map_desc"       wrap_text="1" max_size="300,120" min_size="300,120"/>
		<!--
		<ScrollArea name="map_description_area" position="5,380"> </ScrollArea>
		-->
		<Label name="translation_status"/>
	</VBox>

<Spacer />
</VBox>
