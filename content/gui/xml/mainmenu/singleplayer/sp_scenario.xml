<?xml version="1.0"?>
<VBox fixed_size="320,480"  name="right_side">
	<HBox name="map_language_hbox">
	<VBox name="map_vbox">

		<Label text="Choose a map to play:"  name="choose_map_lbl" wrap_text="1" fixed_size="140,20" />
		<ScrollArea fixed_size="140,200" name="map_list_area">
			<ListBox name="maplist" is_focusable="0" />
		</ScrollArea>
	</VBox>
	<Spacer />
	<VBox name="language_hbox">
		<Label text="Select a language:"  name="select_lang_lbl" wrap_text="1" fixed_size="140,20" />
		<ScrollArea fixed_size="140,200" name="lang_list_area">
			<ListBox name="uni_langlist" is_focusable="0" />
		</ScrollArea>
	</VBox>
	</HBox>

	<VBox name="map_info">
		<Label name="uni_map_author"     wrap_text="1" fixed_size="300,40"  />
		<Label name="uni_map_difficulty" wrap_text="1" fixed_size="300,20"  />
		<Label name="uni_map_desc"       wrap_text="1" fixed_size="300,120" />
		<Label name="translation_status" wrap_text="1" fixed_size="300,40"  />
	</VBox>

<Spacer />
</VBox>
