<?xml version="1.0"?>

<Container size="230,230" name="mainhud"> <!-- positioning happens in ingamegui#init -->
<!-- This size only needs to be "210,230", but is larger to prevent accidental scrolling.
In case you change the size of this Container, also adapt the ingamegui positioning value.  -->
<!-- The actual minimap Icon is placed after everything else so that it gets focus  -->

<Container name="background_and_buttons" position="-30,0" size="240,240">
	<Icon name="minimap_overlay_image" position="31, 1"
		image="content/gui/images/background/widgets/map_bg.png" />
	<Label name="speed_text" position="50,90" font="default_bold" />

	<ImageButton name="speedUp" position="48,63"
		path="icons/widgets/minimap/speed_up" helptext="Increase game speed (+)" />
	<ImageButton name="speedDown" position="48,105"
		path="icons/widgets/minimap/speed_down" helptext="Decrease game speed (-)" />

	<ImageButton name="rotateLeft" position="96,19"
		path="icons/widgets/minimap/rotate_left" helptext="Rotate map counterclockwise (,)" />
	<ImageButton name="rotateRight" position="150,19"
		path="icons/widgets/minimap/rotate_right" helptext="Rotate map clockwise (.)" />

	<ImageButton name="zoomIn" position="195,63"
		path="icons/widgets/minimap/zoom_in" helptext="Zoom in" />
	<ImageButton name="zoomOut" position="195,105"
		path="icons/widgets/minimap/zoom_out" helptext="Zoom out" />
</Container>

<Container size="250,90"  position="11,149">
