<?xml version="1.0"?>
<Container name="change_name_dialog_window" size="374,230"
	position_technique="center:center"
	background_image="content/gui/images/background/notice230.png">

<VBox position="50,30" padding="10">
	<Label name="headline_change_name" text="Change name" />
	<hr />
	<HBox padding="10">
		<Label name="old_name_label" text="Old name:" />
		<Label name="old_name" />
	</HBox>
	<Label name="enter_new_name_lbl" text="Enter new name:"
		wrap_text="1" max_size="150,40" />
	<TextField name="new_name" max_size="150,20" min_size="150,20" />

	<HBox>
		<CancelButton />
		<OkButton helptext="Apply the new name" />
	</HBox>
</VBox>

</Container>
