<?xml version="1.0"?>
<TabContainer name="BB_main_tab">

	<AutoResizeContainer position="0,5">
		<Icon name="running_costs_label" position="160,0" helptext="Running costs"
			image="content/gui/icons/resources/running_costs.png" />
		<Label name="running_costs" position="180,0" />
	</AutoResizeContainer>

	<!--	ONLY ACTIVE WHEN NOT BUILDING -->
	<Container position="5,50" size="260,150" name="container_inactive">
		<Label position="0,15" name="BB_howto_build_lbl" wrap_text="1" max_size="200,150" min_size="200,150"
		       text="To build a boat, click on one of the class tabs, select the desired ship and confirm the order." />
	</Container>

	<!--	ONLY ACTIVE WHEN BUILDING -->
	<Container position="5,10" size="260,210" name="container_active">
		<!-- Current order, pause -->
		<Label name="BB_current_order" text="Currently building:"
			comment="Information about the ship currently under construction at the boat builder" />
		<HBox name="queue_container" position="0,18" />
		<Label name="headline_BB_builtship_label" position="0,63" />
		<Icon image="content/gui/images/background/square_120.png" position="0,85"
			name="BB_cur_ship_bg" />
		<Icon name="BB_cur_ship_icon" position="2,87" />
		<VBox position="125,95" name="BB_upgrades_box" />

		<!-- one of those button gets removed at runtime -->
		<ImageButton path="icons/templates/production/toggle_active" helptext="Pause"
			position="140,150" name="toggle_active_active"
			comment="Pauses the current ship production, can be resumed later" />
		<ImageButton path="icons/templates/production/toggle_inactive" helptext="Resume"
			position="140,150" name="toggle_active_inactive"
			comment="Resumes the currently paused ship production" />
	</Container>

	<Container position="5,225" size="260,110" name="BB_progress_container">
		<!-- Progress display -->
		<ProgressBar name="progress" max_size="100,12" position="9,3"
			background="content/gui/images/background/bar_bg.png" />
		<Label position="0,20" name="BB_progress_label" text="Construction progress:"
			comment="Refers to the resources still missing to complete the current boat builder task" />
		<Label position="165,20" name="BB_progress_perc" />

		<!-- Resources -->
		<Label position="0,55" name="BB_needed_res_label" text="Resources still needed:" />
		<HBox position="0,75" size="260,50" name="BB_needed_resources_container" padding="8">
			<!-- dynamical display of the three most wanted res with amount in one line, looking like this:
			[ ] 11t	[ ] 8t	[ ] 2t -->
		</HBox>
	</Container>

	<Container position="5,310" size="260,100" name="BB_cancel_container">
		<Label position="10,30" name="BB_cancel_build_label" text="Cancel building:"
			comment="abort construction of a ship, lose invested resources" />
		<Label position="10,45" name="BB_cancel_warning_label" text="(lose all resources)"
			comment="abort construction of a ship, lose invested resources" />
		<CancelButton name="BB_cancel_button"  position="160,22"  size="64,64"
			comment="abort construction of a ship, lose invested resources"
			helptext="Cancel all building progress" /> <!-- needs a confirmation popup -->
	</Container>

</TabContainer>
