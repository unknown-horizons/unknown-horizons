<?xml version="1.0"?>
<TabContainer name="buy_sell_goods" headline="Trade">

	<!-- Inventory of ship -->
	<AutoResizeContainer position="0,5">
		<Icon image="content/gui/images/tabwidget/icon_trade_ship.png" position="160,0" />
		<HBox position="0,3"  min_size="170,20"  size="230,20">
			<Label name="ship_label"  text="Ship:" />
		<Spacer min_size="0"  max_size="50" />
			<Label name="ship_name" />
		</HBox>

		<Icon image="content/gui/images/background/inv_bg.png" position="  0,35" name="slot" />
		<Icon image="content/gui/images/background/inv_bg.png" position=" 55,35" name="slot" />
		<Icon image="content/gui/images/background/inv_bg.png" position="110,35" name="slot" />
		<Icon image="content/gui/images/background/inv_bg.png" position="165,35" name="slot" />

		<Inventory name="inventory_ship" size="300,150" position="1,36" uncached="1" />

	</AutoResizeContainer>

	<hr position="0,100" />

	<!-- Exchange selectors -->
	<AutoResizeContainer position="0,105">

		<Label text="Exchange:" name="exchange_label" position="0,3" />

		<ImageButton name="size_1" size="32,32" position="5, 25"
			path="icons/ship/smallbutton" />
		<Label position="13, 58" text="1t" name="lbl_1" comment="noi18n" />

		<ImageButton name="size_2" size="32,32" position="47, 25"
			path="icons/ship/smallbutton" />
		<Label position="55, 58" text="5t" name="lbl_5" comment="noi18n" />

		<ImageButton name="size_3" size="32,32" position="90, 25"
			path="icons/ship/smallbutton" />
		<Label position="95, 58" text="10t" name="lbl_10" comment="noi18n" />

		<ImageButton name="size_4" size="32,32" position="132, 25"
			path="icons/ship/smallbutton" />
		<Label position="137, 58" text="20t" name="lbl_20" comment="noi18n" />

		<ImageButton name="size_5" size="32,32" position="174, 25"
			path="icons/ship/smallbutton" />
		<Label position="179, 58" text="50t" name="lbl_50" comment="noi18n" />

	</AutoResizeContainer>

	<hr position="0,180" />

	<AutoResizeContainer position="0,190">
		<Icon image="content/gui/images/tabwidget/icon_trade_settlement.png" position="160,0" />
		<HBox position="0,3"  min_size="170,20"  size="230,20">
			<Label name="trade_with_label" text="Trade partner:" />
			<Spacer min_size="0"  max_size="50" />
			<Label position="100,3" name="partners" />
		</HBox>
	</AutoResizeContainer>

	<!-- Only one of international / domestic is displayed -->
	<AutoResizeContainer name="international" position="0,220">
		<!-- Resources for sale in the settlement -->
		<Container size="520,70">
			<Label name="selling_label" text="Selling" />
			<Icon image="content/gui/images/background/inv_bg.png" position="  0,20" name="slot" />
			<Icon image="content/gui/images/background/inv_bg.png" position=" 55,20" name="slot" />
			<Icon image="content/gui/images/background/inv_bg.png" position="110,20" name="slot" />
			<BuySellInventory name="selling_inventory" size="300,70" position="1,21" uncached="1" />
		</Container>

		<!-- Resources being bought in the settlement -->
		<Container size="520,70" position="0,70">
			<Label name="buying_label" text="Buying" />
			<Icon image="content/gui/images/background/inv_bg.png" position="  0,20" name="slot" />
			<Icon image="content/gui/images/background/inv_bg.png" position=" 55,20" name="slot" />
			<Icon image="content/gui/images/background/inv_bg.png" position="110,20" name="slot" />
			<BuySellInventory name="buying_inventory" size="300,70" position="1,21" uncached="1" />
		</Container>
	</AutoResizeContainer>

	<!-- Only one of international / domestic is displayed -->
	<AutoResizeContainer name="domestic" position="0,220">
		<ScrollArea name="inventory_area_partner" max_size="216,150" min_size="216,150">
			<Inventory name="inventory_partner"  size="0,200"  uncached="1"  display_legend="0" />
		</ScrollArea>
	</AutoResizeContainer>

</TabContainer>
