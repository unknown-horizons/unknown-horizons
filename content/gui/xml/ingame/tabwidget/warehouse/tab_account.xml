<?xml version="1.0"?>
<TabContainer name="tab_account" headline="{instance.settlement.name}">

	<Container size="260,250" position="5,5">

		<HBox>
			<Icon name="collector_utilization_label" helptext="Collector utilization"
				image="content/gui/icons/resources/cap_util.png" />
			<Label name="collector_utilization" helptext="Collector utilization"
				comment="Percentage describing how busy the collectors were (100% = always going for / already carrying full load of goods)" />
		</HBox>

		<AutoResizeContainer position="0,20">
			<Label name="headline_income_label" text="Income:" />

			<Icon image="content/gui/images/resbar_stats/income.png" position="0,20" />
			<Label name="taxes_label" position="19,20" text="Taxes" />
			<Label position="160,20" name="taxes" min_size="100,15" />

			<Icon image="content/gui/images/resbar_stats/sell.png" position="0,40" />
			<Label name="sell_income_label" position="19,40" text="Sale" />
			<Label position="160,40" name="sale" min_size="100,15" />
		</AutoResizeContainer>


		<AutoResizeContainer position="0,90">
			<Label name="headline_expenses_label" text="Expenses:" />

			<Icon image="content/gui/images/resbar_stats/expense.png" position="0,20" />
			<Label name="running_costs_label" position="19,20" text="Running costs" />
			<Label position="160,20" name="running_costs" min_size="100,15" />

			<Icon image="content/gui/images/resbar_stats/buy.png" position="0,40" />
			<Label name="buy_expenses_label" position="19,40" text="Buying" />
			<Label position="160,40" name="buying" min_size="100,15" />
		</AutoResizeContainer>

		<AutoResizeContainer position="0,140">
			<Icon image="content/gui/images/resbar_stats/scales_icon.png" position="0,24" />
			<Label name="headline_balance_label" position="19,20" text="Balance:" />
			<Label position="160,20" name="balance" min_size="100,15" />
		</AutoResizeContainer>

	</Container>

	<ImageButton name="show_production_overview" position="160,200"
		path="icons/widgets/cityinfo/settlement"
		helptext="Show resources produced in this settlement" />

</TabContainer>
