<?xml version="1.0"?>
<Container name="tab_account" size="250,450">
<TabBG amount="6" />

<Container position="0,70" size="600,400">

	<HBox position="22,7"  min_size="170,20"  size="230,20">
	<Spacer min_size="0"  max_size="50" />
		<RenameLabel name="headline"  text="" />
	</HBox>

	<Icon image="content/gui/images/background/hr.png" position="20,30" />
	<Container size="260,250" position="25,43">

		<Label name="headline_income_label" position="0,0" text="Income:" />
		<Icon image="content/gui/images/resbar_stats/income.png" position="0,20" />
		<Label name="taxes_label" position="19,20" text="Taxes"/>
		<Label position="160,20" name="taxes" min_size="100,15" />

		<Icon image="content/gui/images/resbar_stats/sell.png" position="0,40" />
		<Label name="sell_income_label" position="19,40" text="Sale" />
		<Label position="160,40" name="sale" min_size="100,15" />


		<Label name="headline_expenses_label" position="0,70" text="Expenses:" />

		<Icon image="content/gui/images/resbar_stats/expense.png" position="0,90" />
		<Label name="running_costs_label" position="19,90" text="Running costs"/>
		<Label position="160,90" name="running_costs" min_size="100,15"/>

		<Icon image="content/gui/images/resbar_stats/buy.png" position="0,110" />
		<Label name="buy_expenses_label" position="19,110" text="Buying" />
		<Label position="160,110" name="buying" min_size="100,15" />

		<Icon image="content/gui/images/resbar_stats/scales_icon.png" position="0,144" />
		<Label name="headline_balance_label" position="19,140" text="Balance:" />
		<Label position="160,140" name="balance" min_size="100,15" />
	</Container>

	<Container size="260,50"  position="25,240">
	<ToggleImageButton name="show_production_overview" position="160,0" border_size="0"
		inactive_image="content/gui/icons/widgets/cityinfo/settlement.png"
		up_image="content/gui/icons/widgets/cityinfo/settlement.png"
		down_image="content/gui/icons/widgets/cityinfo/settlement.png"
		hover_image="content/gui/icons/widgets/cityinfo/settlement.png"
		is_focusable="0"
		helptext="Show resources produced in this settlement" />
	</Container>

</Container>
</Container>





