<?xml version="1.0"?>
<Container name="choose_next_scenario" size="1020,580" position="-20,0">
<Icon image="content/gui/images/background/book.png" position="100,0" />

	<!-- left side -->

<VBox name="left_vbox" max_size="350,508" min_size="350,508" position="175,40" padding="5">
	<Label name="head_left" font="headline"
	       wrap_text="0" max_size="320, 25" min_size="320, 25"
	       text="Available Scenarios" />
	<Icon image="content/gui/images/background/hr.png" />
	<ScrollArea max_size="300,200" horizontal_scrollbar="0">
		<ListBox name="scenario_list" is_focusable="0" />
	</ScrollArea>

	<Spacer />
	<CancelButton helptext="Continue playing"
		comment="Players either select the next scenario they want to play or press this button" />

</VBox>


	<!-- right side -->

<VBox name="right_vbox" max_size="350,508" min_size="350,508" position="520,40" padding="2">
	<Label name="head_right" font="headline"
	       wrap_text="0" max_size="320, 25" min_size="320, 25"
	       text="Scenario description" />
	<Icon image="content/gui/images/background/hr.png" />
	<Label name="scenario_details"  text="Details:"  comment="More text describing the scenario" />

	<Spacer />

	<HBox> <Spacer min_size="275"/>
	<ToggleImageButton name="choose_scenario" border_size="0" position="175,480"
		inactive_image="content/gui/icons/templates/production/toggle_inactive_n.png"
		up_image="content/gui/icons/templates/production/toggle_active_n.png"
		down_image="content/gui/icons/templates/production/toggle_active_d.png"
		hover_image="content/gui/icons/templates/production/toggle_active_h.png"
		helptext="Choose this scenario"  comment="Select which scenario to play" />
	</HBox>
</VBox>
</Container>
